#!/usr/bin/env node

/* start up command line interface */
var commander = require('commander'),
    startup = require('../index');

commander
  .version(startup.version)
  .option('-e --example', 'Generate an example')
  .option('-c --config', 'Generate a config file')
  .option('-u --up', 'Start the development')
  .parse(process.argv);

if (commander.example) {
  var name = commander.example[0];
  return startup.createProject(name);
}

if (commander.config) {
  return startup.createConfig();
}

if (commander.args.length) {
  return console.warn('unrecognized option: ' + commander.args.shift());
}

if (commander.up) {
  return startup.serve();
}

commander.help()
